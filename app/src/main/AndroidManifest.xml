<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_MEDIA_IMAGES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.POST_NOTIFICATIONS" />

    <uses-feature
        android:name="android.hardware.camera"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Closetly"
        tools:replace="android:fullBackupContent">
        <activity
            android:name=".view.HelpCenterActivity"
            android:exported="false"
            android:label="@string/title_activity_help_center"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.PostFeedActivity"
            android:exported="false"
            android:label="@string/title_activity_post_feed"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.ListingDetailsActivity"
            android:exported="false"
            android:label="ListingDetailsActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.ChangePasswordActivity"
            android:exported="false"
            android:label="ChangePasswordScreen"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.ListingViewerActivity"
            android:exported="false"
            android:label="ListingViewerActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.PostCreationActivity"
            android:exported="false"
            android:label="PostCreationActivity"
            android:theme="@style/Theme.Closetly" />

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.closetly.provider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>

        <activity
            android:name=".view.SettingsActivity"
            android:exported="false"
            android:label="SettingsActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.BlockedUsersActivity"
            android:exported="false"
            android:label="BlockedUsersActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.MessageActivity"
            android:exported="false"
            android:label="MessageActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.ChatActivity"
            android:exported="false"
            android:label="ChatActivity"
            android:theme="@style/Theme.Closetly"
            android:windowSoftInputMode="adjustResize" />
        <activity
            android:name=".view.NotificationActivity"
            android:exported="false"
            android:label="NotificationActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.UserProfileActivity"
            android:exported="false"
            android:label="UserProfileActivity"
            android:theme="@style/Theme.Closetly"></activity>
        <activity
            android:name=".view.FollowersFollowingActivity"
            android:exported="false"
            android:label="FollowersFollowingActivity"
            android:theme="@style/Theme.Closetly"></activity>
        <activity
            android:name=".view.CommentActivity"
            android:exported="false"
            android:label="CommentActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.SavedPostsActivity"
            android:exported="false"
            android:label="SavedPostsActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.SavedPostsFeedActivity"
            android:exported="false"
            android:label="SavedPostsFeedActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.LikedPostsActivity"
            android:exported="false"
            android:label="LikedPostsActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.LikedPostsFeedActivity"
            android:exported="false"
            android:label="LikedPostsFeedActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.FullScreenImageActivity"
            android:exported="false"
            android:label="FullScreenImageActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.ClothesDetailsActivity"
            android:exported="false"
            android:label="@string/title_activity_clothes_detail"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.AddActivity"
            android:exported="false"
            android:label="AddActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.RegistrationActivity"
            android:exported="false"
            android:label="RegistrationActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.DashboardActivity"
            android:exported="false"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.ForgotActivity"
            android:exported="false"
            android:label="ForgotActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.SplashActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Closetly">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.LoginActivity"
            android:exported="false"
            android:label="@string/title_activity_login"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.EditProfileActivity"
            android:exported="false"
            android:label="EditProfileActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.AnalysisActivity"
            android:exported="false"
            android:label="AnalysisActivity"
            android:theme="@style/Theme.Closetly" />
        <activity
            android:name=".view.PlanOutfitActivity"
            android:exported="true"
            android:label="PlanOutfitActivity"
            android:theme="@style/Theme.Closetly"
            android:windowSoftInputMode="adjustResize"></activity>
        <activity
            android:name=".view.SavedOutfitsActivity"
            android:exported="true"
            android:label="SavedOutfitsActivity"
            android:theme="@style/Theme.Closetly"></activity>

        <service
            android:name=".view.FirebaseMsgService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>